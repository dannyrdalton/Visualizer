<div data-role="content" id="input-wrapper">
	<p>Tap the screen to the beat!</p>
	<div class="full-screen-overlay">
		YOU SHOULD NOT SEE THIS
	</div>
	<div class="color-slider">
		<label for="slider">Input slider:
                <img id="theImage" src="http://www.glyphish.com/images/spooky-moon.png" />
            </label>
            <input type="range" name="slider" id="slider" value="0" min="0" max="100"  />
	</div>
</div>


<script type="text/javascript">
	var socket = io.connect(window.location.hostname);
	
	var date = new Date();
	
	$('.full-screen-overlay').click(function() {
		
	    socket.emit('trigger', { timestamp : date.getTime() });
	    $('#input-wrapper').append('<p>Event sent at </p>' + date.getTime());
	});
	
	$("#slider").change(function() {
    	sVal = $(this).val();
    
    	if(sVal > 500) {
        	$('#theImage').attr('src', 'https://si0.twimg.com/profile_images/2452325988/gorzcg0uuguiuzegjsax.png');
    }
    
    	if(sVal <= 500) {
       		$('#theImage').attr('src', 'http://www.glyphish.com/images/spooky-moon.png');
    }
    
    });

</script>